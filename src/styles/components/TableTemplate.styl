// Условности
.tbl_wrapper
  width 100%
  height 80vh
  overflow hidden

.table
  width 100%
  overflow auto
  height 100%
  display flex
  flex-direction column
  
.header, .rows
  display flex
  flex-direction column
  flex-wrap wrap
  
.header
  position sticky
  top 0
  
.header_row
  background-color green

.header_row, .row
  display inline-flex
  border-bottom 1px solid #eaeaea

.column
  width 200px
  height 40px
  display flex
  align-content center
  